<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="desarrollo1.list">
      <field name="name">desarrollo1 list</field>
      <field name="model">desarrollo1.desarrollo1</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="desarrollo1.action_window">
      <field name="name">desarrollo1 window</field>
      <field name="res_model">desarrollo1.desarrollo1</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="desarrollo1.action_server">
      <field name="name">desarrollo1 server</field>
      <field name="model_id" ref="model_desarrollo1_desarrollo1"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="desarrollo1" id="desarrollo1.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="desarrollo1.menu_1" parent="desarrollo1.menu_root"/>
    <menuitem name="Menu 2" id="desarrollo1.menu_2" parent="desarrollo1.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="desarrollo1.menu_1_list" parent="desarrollo1.menu_1"
              action="desarrollo1.action_window"/>
    <menuitem name="Server to list" id="desarrollo1" parent="desarrollo1.menu_2"
              action="desarrollo1.action_server"/>

  </data>
</odoo>